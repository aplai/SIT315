//Pins
int led = 3;
int btn = 2;
int Msensor = 4;

//Globals
int led_state = LOW;
int btn_state = HIGH;

void setup()
{
  Serial.begin(9600);
  pinMode(Msensor, INPUT);
  pinMode(led , OUTPUT);
  pinMode(btn , INPUT_PULLUP);
  
  attachInterrupt(digitalPinToInterrupt(btn), toggle, FALLING);
}

void loop()
{
  delay(500);
}  
  void toggle() {
   if (digitalRead(4) == HIGH) {
   Serial.println("Active");
   digitalWrite(3, HIGH);
   delay(1000);
  }
   else {
    Serial.println("Inactive");
    digitalWrite(3, LOW);
    delay(1000); 
  }
}
